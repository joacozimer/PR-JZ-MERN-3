<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Nueva Nota</h3>
        </div>
        <div class="card-body">
         <form action="/notes" method="POST">
            <div class="form-gruop">
                <input type="text" name="title" class="form-control" placeholder="Titulo" autofocus>
            </div>
            <div class="form-gruop">
                <textarea name="description" class="form-control" placeholder="Descripcion"></textarea>
            </div>
            <div class="form-gruop">
                <button class="btn btn-primary btn-block" type="submit">Guardar</button>
                <button class="btn btn-danger btn-block"><a class="can" href="/notes/">Cancelar</a></button>
            </div>
         </form>
        </div>
    </div>
</div>
