<style>
  .card-body {
    color: black;
  }
  .more-notes{
    background-color: red;
    border-radius: 10px;
    padding: 10px;
    margin: 100px;

  }
  
  a{
    text-decoration: none;
  }
</style>
<div class="row">
  {{#each notes}}
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{ title }} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
        </h4>
        <p>{{ description }} </p>
        <!-- DELETE REQUEST -->
        <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm">Borrar</button>
        </form>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Hello {{user.name}}</h1>
      <p clsss="lead">No hay notas aun</p>
      <a href="/notes/add" class="btn btn-success btn-block">Crea una!!</a>
    </div>
  </div>
  {{/each}}
</div>
<div class="More-notes">
    <a href="/PR-JZ-MERN-3/src/views/notes/new-note.hbs">Agregar nota</a>
</div>
